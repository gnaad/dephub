<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darktoggle"
    android:overScrollMode="never">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbarcredits"
        android:background="@color/darktoggle"
        android:forceDarkAllowed="true"
        android:overScrollMode="never"
        tools:ignore="NotSibling,ScrollViewCount">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80sp">

                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="50sp"
                    android:layout_marginRight="25sp"
                    android:layout_marginBottom="25sp"
                    android:contentDescription="GitHub"
                    android:src="@drawable/ic_github_credits" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:fontFamily="@font/sans"
                    android:text="1. GitHub"
                    android:textColor="@color/blacktowhite"
                    android:textSize="16dp"
                    android:textStyle="normal" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/flaticon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/github">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="50sp"
                    android:layout_marginRight="25sp"
                    android:layout_marginBottom="25sp"
                    android:contentDescription="flaticon"
                    android:src="@drawable/ic_flaticon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:fontFamily="@font/sans"
                    android:text="2. Flaticon"
                    android:textColor="@color/blacktowhite"
                    android:textSize="16dp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/storyset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/flaticon">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="50sp"
                    android:layout_marginRight="25sp"
                    android:layout_marginBottom="25sp"
                    android:contentDescription="storyset"
                    android:src="@drawable/ic_storyset" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:fontFamily="@font/sans"
                    android:text="3. Storyset"
                    android:textColor="@color/blacktowhite"
                    android:textSize="16dp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appbarcredits"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="20sp"
                android:fontFamily="@font/sans"
                android:text="We would like to Thank all these three platforms mentioned below:"
                android:textColor="@color/blacktowhite"
                android:textSize="18dp"
                android:textStyle="normal" />
        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarcredits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarcredits"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:titleTextAppearance="@style/toolbartextentity" />
    </com.google.android.material.appbar.AppBarLayout>

</RelativeLayout>